<!DOCTYPE html>
<html lang="en">
  <head>
    <title>See Post</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- this is for using google font  -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poetsen+One&display=swap"
      rel="stylesheet"
    />
    <!-- this is for adding css style -->
    <!-- ei css file ei post show part er css rakhci -->
    <link rel="stylesheet" href="postShow.css" />
    <link rel="stylesheet" href="sideNavBar.css" />
    <link rel="stylesheet" href="headerNavBar.css" />
    <link rel="stylesheet" href="homePage.css" />
  </head>

  <body>
    <!-- header nav bar -->
    <%- include("layout/headerNavBar") %>

    <!-- side nav bar -->
    <%- include("layout/sideNavBar") %>

    <!-- post page content -->
    <div class="contentBox">
      <!-- ei category range er post gula akta akta kore show korabo eita diye -->
      <% totalSeatAvailable.forEach((post)=>{ %>
      <div class="post_area">
        <div id="postArea1">
          <div id="postArea1Box1">
            <h2 id="h2_color" style="margin-top: 0px">
              Seat availabe for male
            </h2>
            <h5>
              <span class="glyphicon glyphicon-time"></span>
              Post by <%= student ? student.firstName + ' ' + student.lastName :
              'an User' %>
            </h5>
            <h5>
              <span class="label label-danger">room rent</span>
              <span class="label label-primary">location</span>
            </h5>
          </div>
          <div id="postArea1Box2">
            <div class="center">
              <div
                id="reviewCountShowBigly"
                style="font-size: 20px; font-weight: bold"
              >
                4.3
              </div>
              &nbsp;
              <div>
                <img
                  src="images\star.png"
                  style="height: 25px; width: 25px"
                  alt="Star"
                />
              </div>
            </div>
            <button class="btn btn-default btn-md">Save it</button>
            <button class="btn btn-danger btn-md">View All</button>
          </div>
        </div>
        <div id="postArea2">
          <div class="center" id="box1">
            <div class="image" id="image1">
              <div id="image">
                <!-- Here 1st images will visible from database -->
                <!-- <% post.roomImages.forEach(image => { %>
                  <img src="/<%= image %>" alt="Room Image" style="width:200px; height:auto;">
              <% }); %> -->
                <!-- <img src="/<%= post.roomImages[0] %>" alt="image" /> -->
                <% if (post.roomImages && post.roomImages.length > 0) { %>
                <img src="/<%= post.roomImages[0] %>" alt="Room Image1" />
                <% } else { %>
                <p class="center">No image available</p>
                <% } %>
              </div>
            </div>
            <div class="image" id="image2">
              <div id="image">
                <!-- Here 2nd images will visible from database -->
                <% if (post.roomImages && post.roomImages.length > 0) { %>
                <img src="/<%= post.roomImages[1] %>" alt="Room Image2" />
                <% } else { %>
                <p class="center">No image available</p>
                <% } %>
              </div>
            </div>
            <div class="image" id="image3" style="width: 120px">
              <div id="image">
                <!-- Here 3rd images will visible from database -->
                <% if (post.roomImages && post.roomImages.length > 0) { %>
                <img src="/<%= post.roomImages[2] %>" alt="Room Image3" />
                <% } else { %>
                <p class="center">No image</p>
                <% } %>
              </div>
            </div>
          </div>
          <div class="center" id="box2">
            <div class="text">
              <div class="name">Total seat available</div>
              <div class="status">01</div>
            </div>
            <div class="text">
              <div class="name">Each seat rent</div>
              <div class="status">2500 tk</div>
            </div>
            <div class="text">
              <div class="name">Location</div>
              <div class="status">Shewrapara</div>
            </div>
            <div class="text">
              <div class="name">To-let from</div>
              <div class="status">01 January</div>
            </div>
          </div>
        </div>
        <div id="postArea3">
          <!-- ekhane like review confirm button thakbe -->
          <div id="post_button0">
            <span
              ><span id="reviewCount">4.3</span>
              <i class="fa-regular fa-star"></i
            ></span>
            <span class="ffsize">People reviews</span>
          </div>
          <div id="post_button1">
            <i class="fa-regular fa-thumbs-up fa-1x"></i>
            <span class="ffsize">Like</span>
          </div>
          <div id="post_button1">
            <i class="fa-regular fa-thumbs-down"></i>
            <span class="ffsize">Dis-like</span>
          </div>
          <div id="post_button2">
            <i class="fa-regular fa-compass"></i
            ><span class="ffsize">Map location</span>
          </div>
          <div id="post_button3">
            <i class="fa-solid fa-street-view"></i
            ><span class="ffsize">Facilities</span>
          </div>
        </div>
      </div>

      <% }) %>
    </div>
  </body>
</html>
