<html lang="en">
  <head>
    <title>Notification</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <link rel="stylesheet" href="sideNavBar.css" />
    <link rel="stylesheet" href="headerNavBar.css" />
    <link rel="stylesheet" href="homePage.css" />
    <link rel="stylesheet" href="profile.css" />
    <link href="output.css" rel="stylesheet" />
    <link rel="stylesheet" href="footer.css" />
  </head>

  <body>
    <!-- header nav bar -->
    <%- include("layout/headerNavBar") %> <%- include("layout/sideNavBar") %>
    <div class="contentBox">
      <div class="min-h-[100vh] max-h-fit w-full p-3 bg-[#EEEEEE]">
        <!-- if student have no notification  -->
        <% if(!notifications){ %>
        <div
          class="w-full min-h-[80vh] flex flex-col justify-center items-center"
        >
          <div>
            <img
              class="h-[300px] w-[300px]"
              src="images\no-notification.png"
              alt=""
            />
          </div>
          <div class="font-bold text-6xl">You have no notification.</div>
          <div>
            Back to the
            <a class="text-yellow-700" href="/homePageToLet">home</a> page.
          </div>
        </div>
        <% } else { %>
        <!--If user have Notification -->
        <div
          class="w-full h-[185px] p-3 mb-3 bg-white rounded-md flex transition duration-600 hover:shadow-lg"
        >
          <div class="h-full min-w-[45%]">
            <div class="w-full h-fit pb-3 font-bold flex">
              <div class="w-full text-red-800">Request Information</div>
            </div>
            <div class="w-full h-fit pb-1 font-bold flex">
              <div class="w-1/3">Requested by</div>
              <div class="w-2/3">:&nbsp; Ahshanul Haquc</div>
            </div>
            <div class="w-full h-fit py-1 font-bold flex">
              <div class="w-1/3">Request from</div>
              <div class="w-2/3">:&nbsp; To-let</div>
            </div>
            <div class="w-full h-fit py-1 font-bold flex">
              <div class="w-1/3">Request date</div>
              <div class="w-2/3">:&nbsp; 2-5-2035</div>
            </div>
            <div class="w-full h-fit py-1 font-bold flex">
              <div class="w-1/3 text-gray-500">Request message</div>
              <div class="w-2/3">
                :&nbsp; I want a rent seat in your flat for living.
              </div>
            </div>
          </div>
          <div class="h-full min-w-[45%]">
            <div class="w-full h-fit pb-3 font-bold flex">
              <div class="w-full text-red-800">User Information</div>
            </div>
            <div class="w-full h-fit pb-1 font-bold flex">
              <div class="w-1/3">Student Id</div>
              <div class="w-2/3">:&nbsp; 213002122</div>
            </div>
            <div class="w-full h-fit py-1 font-bold flex">
              <div class="w-1/3">Department</div>
              <div class="w-2/3">:&nbsp; CSE</div>
            </div>
            <div class="w-full h-fit py-1 font-bold flex">
              <div class="w-1/3">Phone</div>
              <div class="w-2/3">:&nbsp; 01788889999</div>
            </div>
            <div class="w-full h-fit py-1 font-bold flex">
              <div class="w-1/3">Email</div>
              <div class="w-2/3">:&nbsp; 213002122@student.green.edu.bd</div>
            </div>
          </div>
          <div class="h-full min-w-[10%] flex flex-col">
            <button class="btn btn-primary btn-sm w-full">
              Confirm Request
            </button>
            <button class="btn-default btn-sm w-full mt-2">
              Delete Request
            </button>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <script src="\javaScriptFiles\sideNavBarShow.js"></script>
  </body>
  <%- include("layout/footer.ejs") %>
</html>
