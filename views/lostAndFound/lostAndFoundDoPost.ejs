<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Lost & Found</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="sideNavBar.css" />
    <link rel="stylesheet" href="headerNavBar.css" />
    <link rel="stylesheet" href="homePage.css" />
    <link href="output.css" rel="stylesheet" />
    <link rel="stylesheet" href="footer.css" />
    <link rel="stylesheet" href="homePageToLet.css" />
  </head>
  <body>
    <!-- header nav bar -->
    <%- include("../layout/headerNavBar") %> <%- include("../layout/sideNavBar")
    %> <%- include("../lostAndFound/lostAndFoundNavBar") %>
    <div
      class="contentBox flex justify-center items-center min-h-screen bg-gray-100"
    >
      <div class="w-full flex justify-center my-10">
        <form
          class="w-1/2 bg-white p-6 shadow-lg rounded-lg"
          method="post"
          action="/lostAndFoundDoPost"
          enctype="multipart/form-data"
        >
          <h2 class="text-4xl font-semibold mb-4 text-center text-green-600">
            Report a Lost Item
          </h2>

          <label class="block font-bold">Title / Item Name</label>
          <input
            type="text"
            name="title"
            placeholder="Enter a title or item name"
            class="w-full p-2 border rounded mb-4"
            required
          />

          <label class="block font-bold">Status</label>
          <select name="status" class="w-full p-2 border rounded mb-4" required>
            <option>Lost</option>
            <option>Found</option>
          </select>

          <label class="block font-bold">Category</label>
          <select
            name="category"
            class="w-full p-2 border rounded mb-4"
            required
          >
            <option>Electronics</option>
            <option>Books</option>
            <option>Clothing</option>
            <option>Accessories</option>
            <option>Other</option>
          </select>

          <label class="block font-bold">Date Lost/Found</label>
          <input
            type="date"
            name="dateLost"
            class="w-full p-2 border rounded mb-4"
            required
          />

          <label class="block font-bold">Location Lost/Found area type</label>
          <select
            name="locationCategory"
            class="w-full p-2 border rounded mb-4"
            required
          >
            <option>Campus any area</option>
            <option>Library</option>
            <option>Love road</option>
            <option>Bus terminal</option>
            <option>Canteen</option>
            <option>Admin building</option>
            <option>Classroom</option>
          </select>

          <label class="block font-bold">Location Lost/Found</label>
          <input
            type="text"
            name="locationLost"
            placeholder="Enter last seen location specificly"
            class="w-full p-2 border rounded mb-4"
            required
          />

          <label class="block font-bold">Description</label>
          <textarea
            name="description"
            placeholder="Describe the lost item, any unique features, etc."
            class="w-full p-2 border rounded mb-4"
            rows="4"
          ></textarea>

          <label class="block font-bold">Upload Images (max 2)</label>
          <input
            type="file"
            name="imageUpload"
            accept="image/*"
            multiple
            class="w-full p-2 border rounded mb-4"
          />

          <label class="block font-bold">Contact Number</label>
          <input
            type="tel"
            name="contact"
            placeholder="Enter your contact number"
            class="w-full p-2 border rounded mb-4"
            required
          />

          <button
            type="submit"
            class="w-full btn btn-success text-white p-2 rounded"
          >
            Report Lost Item
          </button>
        </form>
      </div>
    </div>
    <!-- quick find  -->
    <div
      class="h-[100vh] w-[100vw] fixed top-[8%] flex justify-center items-center hidden"
      id="quickFindBox"
    >
      <div
        class="absolute h-full w-full bg-black opacity-50"
        onclick="hideQuickFindBox()"
      ></div>
      <form
        action="/quickFindLostAndFound"
        method="post"
        class="h-[500px] w-[600px] p-10 bg-white absolute rounded-3xl shadow-md flex flex-col justify-between items-center"
      >
        <i
          class="fa-solid fa-xmark absolute top-5 right-5 hover:scale-150 hover:text-red-500"
          onclick="hideQuickFindBox()"
        ></i>

        <div class="text-3xl">Select category</div>
        <div class="w-full">
          <select
            name="status"
            id="category"
            class="w-full h-[50px] p-4 text-3xl text-black bg-gray-200"
          >
            <option>Lost</option>
            <option>Found</option>
          </select>
        </div>

        <div class="text-3xl">Select category</div>
        <div class="w-full">
          <select
            name="category"
            id="category"
            class="w-full h-[50px] p-4 text-3xl text-black bg-gray-200"
          >
            <option>Electronics</option>
            <option>Documents</option>
            <option>Bags</option>
            <option>Accessories</option>
            <option>Clothing</option>
            <option>Other</option>
          </select>
        </div>

        <div class="text-3xl">Date Lost</div>
        <div class="w-full">
          <input
            type="date"
            name="dateLost"
            class="w-full h-[50px] p-4 text-3xl text-black bg-gray-200"
          />
        </div>

        <div class="text-3xl">Location Lost Area</div>
        <div class="w-full">
          <select
            name="locationCategory"
            id="category"
            class="w-full h-[50px] p-4 text-3xl text-black bg-gray-200"
          >
            <option>Campus any area</option>
            <option>Library</option>
            <option>Love road</option>
            <option>Bus terminal</option>
            <option>Canteen</option>
            <option>Admin building</option>
            <option>Classroom</option>
          </select>
        </div>

        <div class="text-3xl" id="resultText"></div>
        <div class="">
          <button type="submit" class="btn btn-primary btn-lg">Search</button>
        </div>
      </form>
    </div>
    <script src="\javaScriptFiles\lostAndFoundEvents.js"></script>
    <script src="\javaScriptFiles\sideNavBarShow.js"></script>
  </body>
  <%- include("../layout/footer.ejs") %>
</html>
